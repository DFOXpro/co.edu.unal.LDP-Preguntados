header
	top 0px
	height 3.5rem
	padding 0.75rem 0
	background $morado
	//background linear-gradient(to bottom, #283335 0%,#181818 100%)
	//background-image url("../img/header.png")

	#titulo
	#ipt-buscar
		font-family Fira-Regular
		position absolute
		left 3.5rem
		right 3.5rem
		height 2rem

	#titulo
		font-size 1.9rem
		line-height 1
		overflow hidden
		white-space nowrap
		text-overflow ellipsis
		text-align center
		font-style italic

	#ipt-buscar
		background-color #444
		color white
		border 2px solid
		border-color $moradoOscuro
		border-radius 4px 0 0 4px
		width calc( 100% - 7rem )

	&.claro
		#ipt-buscar
			background-color white
			color black

	button
		height 100%
		width 3.5rem
		padding 0.75rem
		position absolute

		&[data-icon]:before
			line-height 1
			width 2rem
			font-size 2rem
			color white
			margin-left: -3px//fixing some auto margin
		&.activo[data-icon]:before
			color $blue

		&[data-icon]:active:before
			color $moradoOscuro
			.iconSVG
				fill $moradoOscuro

		&.left
			top 0
			left 0
		&.right
			top 0
			right 0
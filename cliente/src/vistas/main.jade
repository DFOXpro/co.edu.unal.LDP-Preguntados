//-- This is the app index
doctype html
html(
	ng-app="app"
	dir="ltr"
)
	head
		meta(
			http-equiv="content-type"
			content="text/html; charset=UTF-8"
		)
		meta(
			name="viewport"
			content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1"
		)
		meta(
			name="theme-color"
			content="#305"
		)
		link(
			type="text/css"
			rel="stylesheet"
			href="main.css"
		)
		if debug
			//- For dev only
			script(src="http://localhost:35729/livereload.js")

		else
			script(src="app.js")
		title title

	body
		div(
			ng-controller="nav"
		)
			include navegacion/header
			include navegacion/menu
		article(ng-view)

		include inicio
		script#w1(
			type="javascript/worker"
		)
			include ../logica/control/cinicio.js

	if debug
		script(src="js/libs/angular.js")
		script(src="js/libs/angular-route.js")
		script(src="js/libs/angular-animate.js")

		script(src="js/app.js")
		script(src="js/vista/vnavegacion.js")
		script(src="js/vista/vinicio.js")